<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head', {titulo:'Login de Usuário'}) %>
    <body>
        <%- include('includes/header') %>

        <main class="container">
            <div class="row">
                <div class="col-12">
                    <h1>Login de Usuário</h1>
                </div>
                <div class="col-12">
                    <form class="w-50" action="/usuarios/login" method="POST">
                        <div class="form-group">
                            <label for="emailUsuario">E-mail</label>
                            <input class="form-control" name="emailUsuario" id="emailUsuario" type="email">
                        </div>
                        <div class="form-group">
                            <label for="senhaUsuario">Senha</label>
                            <input class="form-control" name="senhaUsuario" id="senhaUsuario" type="password">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">Login</button>
                        </div>
                    </form>
                    <% if(typeof(msg) != 'undefined') { %>
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert">
                                <%= msg %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
    
    </body>
</html>